# AWS 설정
aws_region = "ap-northeast-2"
environment = "dev"
team_name = "team12"

# 네트워크 설정
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["ap-northeast-2a", "ap-northeast-2c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# EC2 설정
instance_type        = "t3.micro"  # 프리티어 (비용 절감)
key_pair_name        = "team12-keypair"  # AWS에서 미리 생성 필요
asg_min_size         = 1
asg_max_size         = 1  # 예산 고려하여 1개로 제한
asg_desired_capacity = 1

# RDS 설정
db_instance_class = "db.t3.micro"  # 프리티어
db_name           = "auction_app"
db_username       = "admin"
db_password       = "CHANGE_ME_TO_SECURE_PASSWORD_123!"  # 반드시 변경!

# JWT 설정
jwt_secret = "CHANGE_ME_TO_LONG_SECURE_JWT_SECRET_KEY_MIN_256_CHARACTERS_RECOMMENDED_USE_RANDOM_STRING_GENERATOR"  # 반드시 변경!

# 참고사항:
# 1. key_pair_name: AWS Console에서 미리 생성해야 함
# 2. db_password: 최소 8자, 대소문자+숫자+특수문자 포함 권장
# 3. jwt_secret: 최소 256자 이상 권장 (보안을 위해 긴 랜덤 문자열 사용)
# 4. 이 파일은 절대 Git에 커밋하지 말 것! (.gitignore에 포함됨)
