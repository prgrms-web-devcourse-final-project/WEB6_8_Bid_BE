{
  "analysis": {
    "analyzer": {
      "nori_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase",
          "nori_part_of_speech",
          "nori_readingform"
        ]
      },
      "nori_search_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase",
          "nori_part_of_speech",
          "nori_readingform",
          "synonym_filter"
        ]
      }
    },
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "nori_part_of_speech": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "IC",
          "MAG",
          "MAJ",
          "MM",
          "SP",
          "SSC",
          "SSO",
          "SC",
          "SE",
          "XPN",
          "XSA",
          "XSN",
          "XSV",
          "UNA",
          "NA",
          "VSV"
        ]
      },
      "synonym_filter": {
        "type": "synonym",
        "synonyms_path": "analysis/synonyms.txt",
        "updateable": true
      }
    }
  }
}